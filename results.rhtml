<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
          "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>FFCMC 2010 - <%= @race.name %> - <%= @results_title %></title>
    <script type="text/javascript">
    // TODO Adjust delay
    window.onload = window.setTimeout(display_next_screen, 10 * 1000);
    function display_next_screen() {
      window.location = '<%= @next_page %>';
    }
    </script>
  </head>
  <body>
    <h1>FFCMC 2010 - <%= @race.name %></h1>
    <h2><%= @results_title %></h2>
    <table>
      <thead>
        <td>Rank</td>
<% if @display_status then %>
        <td>Status</td>
<% end %>
<% if @display_manifests then %>
        <td>Manifests</td>
<% end %>
        <td>Time</td>
        <td>Number</td>
        <td>Name</td>
        <td>Company</td>
        <td>City</td>
        <td>Country</td>
      </thead>
<% @results.each do |result| %>
      <tr>
        <td><%= result.rank %></td>
<% if @display_status then %>
        <td><%= result.status %></td>
<% end %>
<% if @display_manifests then %>
        <td><%= result.manifests %></td>
<% end %>
        <td><%= result.time %></td>
        <td><%= result.number %></td>
        <td><%= result.name %></td>
        <td><%= result.company %></td>
        <td><%= result.city %></td>
        <td><%= result.country %></td>
      </tr>
<% end %>
    </table>
  </body>
</html>
